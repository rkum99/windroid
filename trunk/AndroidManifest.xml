<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.macsystems.windroid"
	android:versionCode="1"
	android:versionName="0.0.2">

	<uses-sdk
		android:minSdkVersion="3" />

	<uses-permission
		android:name="android.permission.INTERNET" />
	<uses-permission
		android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission
		android:name="android.permission.VIBRATE" />
	<uses-permission
		android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<!--
		<uses-permission android:name="android.permission.ADD_SYSTEM_SERVICE"
		/>
	-->

	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:permission="android.permission.INTERNET"
		android:allowClearUserData="true">

		<activity
			android:name="de.macsystems.windroid.Main"
			android:label="@string/app_name">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN" />
				<category
					android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name="de.macsystems.windroid.DownloadActivity"
			android:label="@string/download_title" />

		<activity
			android:name="de.macsystems.windroid.SpotSelection"
			android:label="@string/spot_selection_title" />
		<activity
			android:name="de.macsystems.windroid.Preferences"
			android:label="@string/preferences_title" />
		<activity
			android:name="de.macsystems.windroid.SpotConfiguration"
			android:label="@string/spot_configuration_title" />
		<activity
			android:name="de.macsystems.windroid.SpotSummary"
			android:label="@string/spot_summary_title" />
		<activity
			android:name="de.macsystems.windroid.AlarmNotificationDetail"
			android:label="@string/alarm_notification_detail_title" />
		<activity
			android:name="de.macsystems.windroid.HomeScreenConfigure"
			android:label="@string/app_name" />
		<activity
			android:name="de.macsystems.windroid.forecast.SpotOverview"
			android:label="@string/spot_overview_title" />
		<receiver
			android:name="de.macsystems.windroid.BootCompletedBroadcastReceiver"
			android:label="@string/app_name"
			android:enabled="true"
			android:exported="false">
			<intent-filter>
				<action
					android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>
		</receiver>
		<receiver
			android:name="de.macsystems.windroid.HomeScreenWidget">
			<intent-filter>
				<action
					android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data
				android:name="android.appwidget.provider"
				android:resource="@xml/homescreen_appwidget_info" />
		</receiver>
		<service
			android:name="de.macsystems.windroid.SpotService"
			android:label="@string/app_name"
			android:enabled="true">
			<intent-filter>
				<action
					android:name="de.macsystems.windroid.START_SPOT_SERVICE_ACTION" />
			</intent-filter>
		</service>
	</application>
</manifest> 