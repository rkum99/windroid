<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<Button android:id="@+id/Button02" android:layout_width="188dip"
		android:layout_height="100dip" android:text="B"
		android:layout_centerHorizontal="true"
		android:textSize="48sp"
		android:textStyle="bold" />

	<View
		android:id="@+id/dummy"
		android:layout_below="@id/Button02"
		android:layout_width="fill_parent"
		android:layout_height="20dp" />

	<Button
		android:id="@+id/spotsummary_cancel"
		android:text="@string/spot_summary_cancel"
		android:layout_alignParentBottom="true"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	
	<Button
		android:id="@+id/spotsummary_accept"
		android:text="@string/spot_summary_add"
		android:layout_above="@id/spotsummary_cancel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
</RelativeLayout>
