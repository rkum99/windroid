<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<TextView
		android:text="@string/title_spot_selection"
		android:gravity="center_horizontal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textSize="20sp" />
	<View
		android:layout_height="20dip"
		android:layout_width="fill_parent" />

	<ScrollView
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1">

		<LinearLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent">


			<TextView
				android:id="@+id/continent"
				android:text="@string/continent_spot_selection"
				android:gravity="bottom"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:textSize="20sp" />

			<Spinner
				android:id="@+id/continentSpinner"
				android:layout_alignParentTop="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="false" />

			<TextView
				android:text="@string/country_spot_selection"
				android:gravity="bottom"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:textSize="20sp" />

			<Spinner
				android:id="@+id/countrySpinner"
				android:layout_alignParentTop="false"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="false" />

			<TextView
				android:text="@string/region_spot_selection"
				android:gravity="bottom"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:textSize="20sp" />

			<Spinner
				android:id="@+id/regionSpinner"
				android:layout_alignParentTop="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true" />

			<TextView
				android:text="@string/station_spot_selection"
				android:gravity="bottom"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:layout_weight="1"
				android:textSize="20sp" />

			<Spinner
				android:id="@+id/stationSpinner"
				android:layout_alignParentTop="true"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:drawSelectorOnTop="true" />

			<LinearLayout
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:orientation="vertical"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal">
				<View
					android:layout_height="20dip"
					android:layout_width="fill_parent" />

				<Button
					android:id="@+id/stationSelect"
					android:text="@string/confirm_spot_selection"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="center" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</LinearLayout>

